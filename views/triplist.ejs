<%- include('partials/header') %>

<h1>Zaplanowane podróże</h1>

<div class="top-bar">
  <a class="button-link" href="/new">➕ Dodaj nową podróż</a>
</div>

<ul class="trip-list">
  <% trips.forEach((trip, index) => { %>
    <li class="trip-card">
      <div class="trip-info">
        <strong><%= trip.description %></strong> – <%= trip.date %><br>
        <span>Hotel:</span> <%= trip.hotel %><br>
        <span>Transport:</span> <%= trip.transport %><br>
        <span>Miejsca:</span> <%= trip.attractions %>
      </div>
      <div class="trip-actions">
        <a class="edit-link" href="/edit/<%= index %>">✏️ Edytuj</a>
        <form action="/delete/<%= index %>" method="POST">
          <button class="delete-btn" type="submit">🗑️ Usuń</button>
        </form>
      </div>
    </li>
  <% }) %>
</ul>

<%- include('partials/footer') %>
